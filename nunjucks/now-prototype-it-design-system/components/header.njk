{% from "now-prototype-it-design-system/components/nav" import nowPrototypeItNav %}

{% macro nowPrototypeItHeader(config) %}
  <header class="nowprototypeit-header">
    <h3 class="nowprototypeit-brand-header"><a href="https://nowprototype.it/"><img
            src="{{ config.assetPath }}/images/logo.png" alt="Now Prototype It"/></a></h3>
    {% if config.mainNavItems %}
      {{ nowPrototypeItNav({
        items: config.mainNavItems,
        listClasses: "nowprototypeit-header-main-nav",
        itemClasses: "nowprototypeit-header-main-nav-item"
      }) }}
    {% endif %}
  </header>
{% endmacro %}