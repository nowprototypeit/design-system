{%- set assetPath = assetPath | default('/plugin-assets/%40nowprototypeit%2Fdesign-system/assets') -%}

<!DOCTYPE html>
<html class="nowprototypeit-page no-js {{ htmlClasses }}">
<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  {% block head %}
    {% block meta %}{% endblock %}
    {% block stylesheets %}
      {% include "prototype-core/includes/stylesheets.njk" %}
    {% endblock %}
  {% endblock %}
  <title>
    {% block pageTitle %}
      {% if pageName %}{{ pageName }} - {% endif %}{{ serviceName }} - Now Prototype It
    {% endblock %}
  </title>
  <link rel="apple-touch-icon" sizes="180x180" href="{{ assetPath }}/icons/apple-touch-icon.png"/>
  <link rel="icon" type="image/png" sizes="32x32" href="{{ assetPath }}/icons/favicon-32x32.png"/>
  <link rel="icon" type="image/png" sizes="16x16" href="{{ assetPath }}/icons/favicon-16x16.png"/>
  <link rel="manifest" href="{{ assetPath }}/icons/site.webmanifest"/>
  <link rel="mask-icon" href="{{ assetPath }}/icons/safari-pinned-tab.svg" color="#5bbad5"/>
  <link rel="shortcut icon" href="{{ assetPath }}/icons/favicon.ico"/>
</head>
<body class="{{ bodyClasses }}">
{% block header %}
  {{ nowPrototypeItHeader({
    assetPath: assetPath,
    mainNavItems: headerMainNavItems
  }) }}
{% endblock %}
{% block headerNav %}
  {% if headerSubNavItems | length > 0 %}
    {{ nowPrototypeItNav({
      items: headerSubNavItems,
      listClasses: "nowprototypeit-manage-prototype-navigation__list",
      itemClasses: "nowprototypeit-manage-prototype-navigation__list-item",
      currentItemClasses: "nowprototypeit-manage-prototype-navigation__list-item--current"
    }) }}
  {% endif %}
{% endblock %}
<main>
  {% block content %}{% endblock %}
</main>
{% block footer %}
  <footer class="nowprototypeit-footer">
    {% block footerContent %}
    {% endblock %}
    <p class="nowprototypeit-footer-copyright"><small>&copy;2024 Now Prototype It</small></p>
  </footer>
{% endblock %}
{% block bodyEnd %}
  {% block scripts %}
    {% include "prototype-core/includes/scripts.njk" %}
    {% block pageScripts %}{% endblock %}
  {% endblock %}
{% endblock %}
</body>
</html>
